<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".TeleFragment"
    android:background="@color/DarkGreen">

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollViewTele"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_totesFromChute"
                    android:id="@+id/textTotesFromChute"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/Gold" />

                <com.vandenrobotics.functionfirst.views.NumberPicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pickerTotesFromChute"
                    android:layout_below="@+id/textTotesFromChute"
                    android:layout_alignLeft="@+id/textTotesFromChute"
                    android:layout_alignStart="@+id/textTotesFromChute"
                    android:orientation="horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_litterFromChute"
                    android:id="@+id/textLitterFromChute"
                    android:layout_toRightOf="@+id/textTotesFromChute"
                    android:layout_toEndOf="@+id/textTotesFromChute"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/Gold" />

                <com.vandenrobotics.functionfirst.views.NumberPicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pickerLitterFromChute"
                    android:layout_below="@+id/textLitterFromChute"
                    android:layout_alignLeft="@+id/textLitterFromChute"
                    android:layout_alignStart="@+id/textLitterFromChute"
                    android:orientation="horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_totesFromLandfill"
                    android:id="@+id/textTotesFromLandfillTele"
                    android:layout_toRightOf="@+id/textLitterFromChute"
                    android:layout_toEndOf="@+id/textLitterFromChute"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/Gold" />

                <com.vandenrobotics.functionfirst.views.NumberPicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pickerTotesFromLandfillTele"
                    android:layout_below="@+id/textTotesFromLandfillTele"
                    android:layout_alignLeft="@+id/textTotesFromLandfillTele"
                    android:layout_alignStart="@+id/textTotesFromLandfillTele"
                    android:orientation="horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_totesFromStep"
                    android:id="@+id/textTotesFromStepTele"
                    android:layout_toRightOf="@+id/textTotesFromLandfillTele"
                    android:layout_toEndOf="@+id/textTotesFromLandfillTele"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/Gold" />

                <com.vandenrobotics.functionfirst.views.NumberPicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pickerTotesFromStepTele"
                    android:layout_below="@+id/textTotesFromStepTele"
                    android:layout_alignLeft="@+id/textTotesFromStepTele"
                    android:layout_alignStart="@+id/textTotesFromStepTele"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_litterToLandfill"
                    android:id="@+id/textLitterToLandfill"
                    android:layout_toRightOf="@+id/textTotesFromStepTele"
                    android:layout_toEndOf="@+id/textTotesFromStepTele"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/Gold" />

                <com.vandenrobotics.functionfirst.views.NumberPicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pickerLitterToLandfill"
                    android:layout_below="@+id/textLitterToLandfill"
                    android:layout_alignLeft="@+id/textLitterToLandfill"
                    android:layout_alignStart="@+id/textLitterToLandfill"
                    android:orientation="horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_containersUpright"
                    android:id="@+id/textContainersUpright"
                    android:layout_toRightOf="@+id/textLitterToLandfill"
                    android:layout_toEndOf="@+id/textLitterToLandfill"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/Gold" />

                <com.vandenrobotics.functionfirst.views.NumberPicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pickerContainersUpright"
                    android:layout_below="@+id/textContainersUpright"
                    android:layout_alignLeft="@+id/textContainersUpright"
                    android:layout_alignStart="@+id/textContainersUpright"
                    android:orientation="horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_totesUpright"
                    android:id="@+id/textTotesUpright"
                    android:layout_toRightOf="@+id/textContainersUpright"
                    android:layout_toEndOf="@+id/textContainersUpright"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/Gold" />

                <com.vandenrobotics.functionfirst.views.NumberPicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pickerTotesUpright"
                    android:layout_below="@+id/textTotesUpright"
                    android:layout_alignLeft="@+id/textTotesUpright"
                    android:layout_alignStart="@+id/textTotesUpright"
                    android:orientation="horizontal" />

            </RelativeLayout>
        </LinearLayout>

    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/layoutDiagramButtons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/buttonAddStack"
            android:textColor="@color/Gold"
            android:text="@string/button_addStack" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/buttonEditStack"
            android:text="@string/button_editStack"
            android:textColor="@color/Gold" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/buttonDeleteStack"
            android:text="@string/button_deleteStack"
            android:textColor="@color/Gold" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fieldDiagram"
        android:src="@drawable/field_diagram_red"
        android:layout_below="@+id/scrollViewTele"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/layoutDiagramButtons"
        android:contentDescription="@string/text_fieldDescription" />

</RelativeLayout>
